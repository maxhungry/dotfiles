[user]
	name = Max Hung
	email = info@maxhung.co.nz
	username = maxhungry
[core]
	autocrlf = input
	editor = /usr/local/bin/nvim
	excludesfile = ~/.gitignore
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%C(yellow)%h %C(reset)%ad | %C(blue)%s%d %C(reset)[%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[push]
	default = upstream
[color]
	ui = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[merge]
	tool = vimdiff
[mergetool]
  prompt = true
	keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED
